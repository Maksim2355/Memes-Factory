<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.lumi.surfeducationproject.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_splashFragment_to_tabFragment"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true"
            app:destination="@id/tabFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.lumi.surfeducationproject.ui.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_tabFragment"
            app:destination="@id/tabFragment" />
    </fragment>
    <fragment
        android:id="@+id/memeDetailsFragment"
        android:name="com.lumi.surfeducationproject.ui.MemeDetailsFragment"
        android:label="fragment_meme_details"
        tools:layout="@layout/fragment_meme_details" />
    <fragment
        android:id="@+id/tabFragment"
        android:name="com.lumi.surfeducationproject.ui.TabFragment"
        android:label="fragment_tab"
        tools:layout="@layout/fragment_tab" >
        <action
            android:id="@+id/action_tabFragment_to_memeDetailsFragment"
            app:destination="@id/memeDetailsFragment" />
        <action
            android:id="@+id/action_tabFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
</navigation>